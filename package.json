{
  "name": "lydia-automation",
  "version": "1.0.0",
  "type": "module",
  "description": "Mobile UI automation test for Lydia using WebdriverIO, Appium, Cucumber and TypeScript, API tests",
  "main": "wdio.conf.js",
  "scripts": {
    "test": "npx wdio run wdio.conf.cjs",
    "allure:generate": "allure generate allure-results --clean -o reports/ui",
    "allure:open": "allure open",
    "report:ui": "allure generate allure-results --clean -o reports/ui",
    "test:api": "tsx node_modules/mocha/bin/mocha.js api/tests/**/*.ts",
    "report:api": "allure generate allure-results-api --clean && allure open -o reports/api"
  },
  "keywords": [
    "webdriverio",
    "appium",
    "cucumber",
    "typescript",
    "mobile-test",
    "automation"
  ],
  "author": "Sami Echarif",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.7.2",
    "@wdio/allure-reporter": "^8.39.0",
    "@wdio/appium-service": "^8.39.0",
    "@wdio/cli": "^8.39.0",
    "@wdio/cucumber-framework": "^8.39.0",
    "@wdio/local-runner": "^8.39.0",
    "@wdio/spec-reporter": "^8.39.0",
    "@wdio/types": "^8.41.0",
    "@wdio/utils": "^8.39.0",
    "allure-commandline": "^2.24.0",
    "appium": "^2.6.0",
    "appium-uiautomator2-driver": "^2.24.0",
    "chai": "^6.2.1",
    "mocha": "^11.7.5",
    "mochawesome": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "webdriverio": "^8.39.0"
  }
}
