{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "types": [
      "node",
      "@wdio/globals/types",
      "@wdio/cucumber-framework"
    ],

    "baseUrl": "./",
    "resolveJsonModule": true,
    "allowJs": true
  },

  "include": ["mobile/**/*.ts"]
}
